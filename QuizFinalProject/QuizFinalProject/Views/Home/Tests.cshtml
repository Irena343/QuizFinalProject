
@model IEnumerable<QuizFinalProject.DataBase.Models.Test>
@{
    ViewBag.Title = "Tests";
}




<div class="container">

    <!-- Page Heading -->
    <h1 class="my-4">

        Available Tests
        <br/>
      
    </h1>

  
    <tr> 
        <th></th> 
        <th> 
            @Html.ActionLink(" Sort by Name", "Tests", new { sortOrder=ViewBag.NameSort }, new { @class = "btn btn-info " }) 
           
        </th> 
        <th>
            @Html.ActionLink(" Sort by Complexity", "Tests", new { sortOrder = ViewBag.ComplexitySort },new { @class = "btn btn-info " })
          
        </th> 
        <th> 
            @Html.ActionLink(" Sort by Category", "Tests", new { sortOrder=ViewBag.CategorySort }, new { @class = "btn btn-info " }) 
        </th> 
    </tr>


    <div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-sm-6 portfolio-item mt-1 mb-1">

            <div class="card h-100">             
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">@item.TestName</a>
                    </h4>
                    <p class="card-text">Category: @item.Category.CategoryName</p>
                    <p class="card-text">Duration time: @item.DurationTime</p>
                    <p class="card-text">Questions: @item.Questions.Count</p>
                    <p class="card-text">Complexity: @item.Complexity</p>
                    <p class="card-text">Description: @item.Description</p>
                    @Html.ActionLink("Start Test", "TestPage", "TestPage", new { id = item.TestId },new { @class = " btn btn-primary btn-sm" } )

                </div>
                
            </div>

        </div>
    }

    </div>
    <!-- /.row -->
    <!-- Pagination -->
    <ul class="pagination justify-content-center">
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">«</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">»</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>

</div>